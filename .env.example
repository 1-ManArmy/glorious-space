# Keycloak Configuration for Glorious Space
# Copy this to .env and update with your Keycloak server details

# Django Configuration
SECRET_KEY=your-super-secret-django-key-here
DEBUG=True

# ALLOWED_HOSTS=yourdomain.com,anotherdomain.com (Each host is separated by a comma)
ALLOWED_HOSTS=localhost,127.0.0.1,*

# Database Configuration
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=""
DB_USERNAME=""
DB_PASSWORD=""

# PostgreSQL Alternative (uncomment if using PostgreSQL)
# DATABASE_URL=postgresql://username:password@localhost:5432/glorious_space

# Keycloak Server Configuration
KEYCLOAK_SERVER_URL=http://localhost:8080
KEYCLOAK_REALM=master
KEYCLOAK_CLIENT_ID=glorious-space
KEYCLOAK_CLIENT_SECRET=your-client-secret-here

# Keycloak Admin Configuration (for user management)
KEYCLOAK_ADMIN_USERNAME=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# Redis Configuration (for caching and sessions)
# REDIS_URL=redis://localhost:6379/0

# OAuth2 Configuration
OAUTH2_PROVIDER_ACCESS_TOKEN_EXPIRE_SECONDS=3600
OAUTH2_PROVIDER_REFRESH_TOKEN_EXPIRE_SECONDS=3600000

# Security Settings
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Email Configuration (for user notifications)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-email-password
